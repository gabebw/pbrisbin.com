#!/bin/sh
(
  cd ..

  # https://github.com/jaspervdj/hakyll/issues/340
  git clone https://github.com/jgm/pandoc
  git clone https://github.com/jgm/pandoc-citeproc
  git clone git@github.com:pbrisbin/hakyll
)

cabal sandbox init
cabal sandbox add-source ../pandoc
cabal sandbox add-source ../pandoc-citeproc
cabal sandbox add-source ../hakyll
cabal install --dependencies-only
